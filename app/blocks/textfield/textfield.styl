.textfield
	display flex
	align-items flex-end

	&__label
		margin-right 17px
		font-size 22px
		line-height 26px
		cursor pointer
		user-select none
		color $data-row_label_color

	&__input
		padding-x 15px
		padding-top 18px
		padding-bottom 8px
		flex-grow 1
		font-family courier
		font-size 30px
		font-weight 400
		line-height 36px
		color $data-row_text_color
		background url('../images/bg-data-row.png')
		background-color transparent
		background-repeat no-repeat
		background-position left bottom
		border none

	&_type_date &__input
		flex-grow 0
		width 206px
